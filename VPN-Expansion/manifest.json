{
  // Версия манифеста для Chrome Extensions
  "manifest_version": 3,

  // Название расширения, отображаемое в магазине и интерфейсе браузера
  "name": "VPN Barbaris",

  // Версия расширения (формат semver)
  "version": "1.0",

  // Описание функциональности расширения
  "description": "Быстрый и безопасный VPN",

  // Набор иконок разных размеров для различных мест в интерфейсе
  "icons": {
    "16": "assets/icon16.png", // Для контекстного меню и маленьких элементов
    "32": "assets/icon32.png", // Для панели задач Windows
    "48": "assets/icon48.png", // Для страницы расширений
    "128": "assets/icon128.png" // Для магазина Chrome Web Store
  },

  // Список разрешений, необходимых для работы расширения
  "permissions": [
    "proxy", // Для управления прокси-настройками браузера
    "storage", // Для сохранения данных между сессиями
    "webRequest", // Для перехвата и модификации сетевых запросов
    "webRequestAuthProvider", // Для работы с аутентификацией в запросах
    "notifications" // Для показа уведомлений пользователю
  ],

  // Фоновый скрипт (service worker), который работает постоянно
  "background": {
    "service_worker": "background.js"
  },

  // Настройки кнопки расширения в тулбаре браузера
  "action": {
    "default_popup": "popup/popup.html", // HTML-файл попапа
    "default_icon": { // Иконки для кнопки
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png"
    }
  }
}